@model IEnumerable<crudRelacionalMVC.Models.Biblioteca>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Bibliotecas</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayName("Acciones")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBiblioteca">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdBiblioteca">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBiblioteca">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
